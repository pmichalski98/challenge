// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id
  challenge   Challenge @relation(fields: [challengeId], references: [id])
  challengeId String
}

model Challenge {
  id     String @id @default(uuid())
  status String
  props  Prop[]
  User   User[]
}

model Prop {
  id          String     @id @default(uuid())
  name        String
  check       Boolean
  Challenge   Challenge? @relation(fields: [challengeId], references: [id])
  challengeId String?
}
